<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffd48c" />
            <gradient android:angle="-90" android:startColor="##ffc86b" android:endColor="#ffd07f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffd48c" />
            <solid android:color="#ed8600"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffd48c" />
            <gradient android:angle="-90" android:startColor="#ffc054" android:endColor="#ffc86b" />
        </shape>
    </item>
</selector>